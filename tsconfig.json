{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "config": ["./config/config.ts"],
    }
  },
  "exclude": [
    "src",
  ]
}
