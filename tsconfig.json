{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "target": "esnext",
    "strict": false,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "config": ["./config/config.ts"],
      "@frontend/types/*": ["./src/types/*"],
    },
  },
  "exclude": [
    "src",
  ],
}
