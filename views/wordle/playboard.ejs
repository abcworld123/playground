<!doctype html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>숫자야구 게임</title>
  <!-- stylesheet -->
  <link rel="stylesheet" href="/stylesheets/wordle/playboard.css"/>
  
  <!-- sweetalert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2"></script>
  
  <!-- socket.io -->
  <script src="/socket.io/socket.io.js"></script>
  
  <!-- javascript -->
  <script language="JavaScript" src="/javascripts/wordle/playboard.js"></script>
</head>
<body>
  <div class="wrapper">
    <div class="header">
      <div id="myAnswerContainer" class="header-item my-answer-container" style="visibility: hidden;">
        <label for="myAnswer">내 숫자:</label>
        <div id="myAnswer" class="my-answer">[ 확인하기 ]</div>
      </div>
      <div id="timer" class="header-item timer"></div>
      <div id="turn" class="header-item turn"></div>
    </div>
    <div id="container" class="container">
      <template id="lineTemplate">
        <div class="line">
          <div class="tile-container"></div>
          <div class="result"></div>
        </div>
      </template>
    </div>
  </div>
  <input type="hidden" id="room" value="<%= room %>">
  <input type="hidden" id="host" value="<%= host %>">
</body>
</html>
