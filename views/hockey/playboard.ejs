<!doctype html>
<html lang="ko">
<head>
    <%- include(views + 'header.ejs') %>
    <title>하키 게임</title>
    <link rel="stylesheet" href="/stylesheets/hockey/playboard.css" />
    <script defer src="/javascripts/hockey/playboard.js"></script>
</head>
<body>
<div class="modal">
    <div class="hockey_modal">
        <img src="/images/games/hockey/playboard_result.gif">
        <span class="hockey_modal_result_text"><span class="hockey_modal_winner_text">1P</span> WIN</span>
        <button class="hockey_modal_btn" type="button">
            메인 페이지
        </button>
    </div>
</div>

<div id="countDown">
    <div class="playboard_before_count">
        3
    </div>
    <div class="playboard_before_count">
        2
    </div>
    <div class="playboard_before_count">
        1
    </div>
</div>
<div class="playboard_play1_goal">Player 1 Goal~~~</div>
<div class="playboard_play2_goal">Player 2 Goal~~~</div>
<!--</div>-->

<div class="playboard_body">
    <div class="playboard_content">
        <div class="playboard_header">
            <div class="playboard_red_score">
                0
            </div>

            <div class="playboard_time_area">
                5
            </div>

            <div class="playboard_blue_scord">
                0
            </div>
        </div>

        <div class="playboard_field_area">
            <div class="playboard_red_goalpost">
            </div>
            <div class="playboard_main_board">
                <div class="playboard_play1_port">
                    ◀ YOUR
                </div>
                <div class="playboard_play2_port">
                    YOUR ▶
                </div>
            </div>
            <div class="playboard_blue_goalpost">
            </div>
            <canvas id="canvas" class="playboard_canvas_area"></canvas>
        </div>
    </div>

</div>
</body>
</html>
